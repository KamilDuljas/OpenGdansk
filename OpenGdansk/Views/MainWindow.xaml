<Window x:Class="OpenGdansk.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenGdansk.ViewModels"
        mc:Ignorable="d"
        Title="OpenGdansk" MinHeight="540" MinWidth="960" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="WhiteSmoke">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Grid VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="1" Source="../Resources/OpenGdanskLogo.png" Stretch="Uniform" HorizontalAlignment="Right" MaxWidth="250" MaxHeight="250"/>
            <Button Content="Fetch Vehicle Data" IsEnabled="{Binding CanFetchData}" Command="{Binding FetchHeaderCommand}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <Label Content="Dane zostały pobrane!" Visibility="{Binding IsDataFetched, Converter={StaticResource BooleanToVis}}" Foreground="Green" VerticalContentAlignment="Center" FontSize="11" HorizontalAlignment="Left" Height="26" Margin="128,10,0,0" VerticalAlignment="Top" Width="130"/>
        </Grid>
    </Grid>
</Window>
