<Window x:Class="OpenGdansk.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenGdansk.ViewModels"
        mc:Ignorable="d"
        Title="OpenGdansk" MinHeight="540" MinWidth="960" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="WhiteSmoke">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Grid VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <DockPanel>
                <Border BorderBrush="DarkRed" DockPanel.Dock="Right" BorderThickness="3">
                <Image Source="../Resources/OpenGdanskLogo.png" DockPanel.Dock="Right" Stretch="Uniform" HorizontalAlignment="Right" MaxWidth="250" MaxHeight="250" Width="125"/>
                </Border>
                <Border BorderBrush="DarkRed" DockPanel.Dock="Left" BorderThickness="3">
                    <Button IsEnabled="{Binding CanFetchData}" Command="{Binding FetchHeaderCommand}" HorizontalAlignment="Left" Margin="10,10,10,0" VerticalAlignment="Top" Height="50" Width="180">
                        <TextBlock Text="Fetch vehicles from ZTM database" TextWrapping="Wrap" TextAlignment="Center"/>
                    </Button>
                </Border>
                <Border BorderBrush="DarkRed" DockPanel.Dock="Bottom" BorderThickness="3">
                    <Label Content="Dane zostały pobrane!" DockPanel.Dock="Bottom" Visibility="{Binding IsDataFetched, Converter={StaticResource BooleanToVis}}" Foreground="Green" VerticalContentAlignment="Center" FontSize="11" HorizontalAlignment="Left" Height="26" Margin="128,10,0,0" VerticalAlignment="Top" Width="130"/>
                </Border>
            </DockPanel>
        </Grid>
        <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ListBox Grid.Column="0" MinHeight="400" ItemsSource="{Binding Vehicles}" SelectedItem="{Binding SelectedVehicle}" Margin="10,10,0,0" VerticalAlignment="Top" Width="200">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                        <TextBlock Text="{Binding VehicleCode}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            <ContentControl Grid.Column="1" Content="{Binding SelectedVehicle}">
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <Image Source="{Binding PhotoUrl}" Stretch="Uniform"/>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </Grid>
    </Grid>
</Window>
